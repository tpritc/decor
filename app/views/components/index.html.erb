<div class="max-w-7xl mx-auto">
  <h1 class="text-2xl font-semibold mb-4">Components</h1>

  <%= form_with url: components_path, method: :get, local: true, class: "flex flex-col gap-2 mb-4" do |form| %>
    <%= form.text_field :query, value: params[:query], placeholder: "Search...", class: field_classes %>
  <% end %>

  <div id="components" class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% if @page.records.any? %>
      <% @page.records.each do |component| %>
        <%= render "component", component: %>
      <% end %>
    <% else %>
      <%= empty_state("No components found matching your search") %>
    <% end %>
  </div>

  <%= render "shared/load_more", id: :load_more_components, page: @page, path: components_path %>
</div>

