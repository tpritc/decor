<%= form_with model: [:admin, computer_model], class: "space-y-4" do |f| %>
  <% if computer_model.errors.any? %>
    <div class="bg-white border border-stone-200 rounded p-3">
      <h2 class="text-sm font-medium text-stone-800"><%= pluralize(computer_model.errors.count, "error") %> prohibited this computer model from being saved:</h2>
      <ul class="mt-2 list-disc list-inside text-sm text-stone-700">
        <% computer_model.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-stone-700" %>
    <%= f.text_field :name, required: true, autofocus: true, class: field_classes %>
  </div>

  <div class="flex gap-3">
    <%= f.submit class: button_classes(style: :primary) %>
    <%= link_to "Cancel", admin_computer_models_path, class: button_classes(style: :secondary) %>
  </div>
<% end %>
