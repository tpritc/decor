<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Computer Models</h1>
    <%= link_to "Add Computer Model", new_admin_computer_model_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" %>
  </div>

  <% if @computer_models.any? %>
    <div class="bg-white shadow overflow-hidden rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Computers</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @computer_models.each do |computer_model| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium"><%= computer_model.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= computer_model.computers.size %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right space-x-2">
                <%= link_to "Edit", edit_admin_computer_model_path(computer_model), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <% if computer_model.computers.empty? %>
                  <%= button_to "Delete", admin_computer_model_path(computer_model), method: :delete, data: { turbo_confirm: "Delete this computer model?" }, class: "text-red-600 hover:text-red-900 text-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-6 text-center text-gray-500">
      No computer models yet.
    </div>
  <% end %>
</div>
