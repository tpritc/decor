<div class="max-w-md w-full mx-auto">
  <h1 class="text-2xl font-bold mb-6">Edit Owner: <%= @owner.user_name %></h1>

  <%= form_with model: @owner, url: admin_owner_path(@owner), class: "space-y-4" do |f| %>
    <% if @owner.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <ul class="list-disc list-inside text-red-700">
          <% @owner.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex items-center">
      <%= f.check_box :admin, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded", disabled: @owner == current_owner %>
      <%= f.label :admin, "Admin privileges", class: "ml-2 block text-sm text-gray-700" %>
      <% if @owner == current_owner %>
        <span class="ml-2 text-sm text-gray-500">(You cannot change your own admin status)</span>
      <% end %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Update", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md cursor-pointer" %>
      <%= link_to "Cancel", admin_owners_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md" %>
    </div>
  <% end %>
</div>
