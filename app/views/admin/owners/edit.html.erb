<div class="max-w-md w-full mx-auto">
  <h1 class="text-xl font-semibold mb-4">Edit Owner: <%= @owner.user_name %></h1>

  <%= form_with model: @owner, url: admin_owner_path(@owner), class: "space-y-4" do |f| %>
    <% if @owner.errors.any? %>
      <div class="bg-white border border-stone-200 rounded p-3">
        <ul class="list-disc list-inside text-sm text-stone-700">
          <% @owner.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="flex items-center">
      <%= f.check_box :admin, class: "h-4 w-4 text-stone-900 focus:ring-0 border-stone-300 rounded", disabled: @owner == Current.owner %>
      <%= f.label :admin, "Admin privileges", class: "ml-2 block text-sm text-stone-700" %>
      <% if @owner == Current.owner %>
        <span class="ml-2 text-sm text-stone-500">(You cannot change your own admin status)</span>
      <% end %>
    </div>

    <div class="flex gap-3">
      <%= f.submit "Update", class: "bg-stone-900 hover:bg-stone-800 text-white text-sm font-medium py-2 px-4 rounded cursor-pointer" %>
      <%= link_to "Cancel", admin_owners_path, class: "bg-white hover:bg-stone-50 text-stone-800 text-sm font-medium py-2 px-4 rounded border border-stone-300" %>
    </div>
  <% end %>
</div>
