<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-6">Add Owner</h1>

  <%= form_with model: [:admin, @owner], class: "space-y-4" do |f| %>
    <% if @owner.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <h2 class="text-red-800 font-medium"><%= pluralize(@owner.errors.count, "error") %> prohibited this owner from being saved:</h2>
        <ul class="mt-2 list-disc list-inside text-red-700">
          <% @owner.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :user_name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :user_name, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
      <p class="mt-1 text-sm text-gray-500">A password setup link will be sent to this email.</p>
    </div>

    <div class="flex items-center">
      <%= f.check_box :admin, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" %>
      <%= f.label :admin, "Admin privileges", class: "ml-2 block text-sm text-gray-700" %>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Create Owner", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md cursor-pointer" %>
      <%= link_to "Cancel", admin_owners_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md" %>
    </div>
  <% end %>
</div>
