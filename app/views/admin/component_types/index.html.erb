<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Component Types</h1>
    <%= link_to "Add Component Type", new_admin_component_type_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" %>
  </div>

  <% if @component_types.any? %>
    <div class="bg-white shadow overflow-hidden rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Components</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @component_types.each do |component_type| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium"><%= component_type.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= component_type.components.size %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right space-x-2">
                <%= link_to "Edit", edit_admin_component_type_path(component_type), class: "text-indigo-600 hover:text-indigo-900 text-sm" %>
                <% if component_type.components.empty? %>
                  <%= button_to "Delete", admin_component_type_path(component_type), method: :delete, data: { turbo_confirm: "Delete this component type?" }, class: "text-red-600 hover:text-red-900 text-sm" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-6 text-center text-gray-500">
      No component types yet.
    </div>
  <% end %>
</div>
