<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Pending Invites</h1>
    <%= link_to "Invite Owner", new_admin_invite_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" %>
  </div>

  <% if @invites.any? %>
    <div class="bg-white shadow overflow-hidden rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Sent</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Expires</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @invites.each do |invite| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium"><%= invite.email %></td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= time_ago_in_words(invite.sent_at) %> ago</td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500">
                <% if invite.expired? %>
                  <span class="text-red-600">Expired</span>
                <% else %>
                  in <%= time_ago_in_words(invite.sent_at + Invite::EXPIRY) %>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right space-x-2">
                <%= button_to "Delete", admin_invite_path(invite), method: :delete, data: { turbo_confirm: "Delete this invitation?" }, class: "text-red-600 hover:text-red-900 text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow rounded-lg p-6 text-center text-gray-500">
      No pending invitations.
    </div>
  <% end %>
</div>
