<div class="max-w-md mx-auto">
  <h1 class="text-2xl font-bold mb-6">Invite Owner</h1>

  <p class="mb-6 text-gray-600">Send an invitation to create an owner account. They'll receive an email with a link to set up their profile and password. The invitation will be valid for 30 days.</p>

  <%= form_with model: @invite, url: admin_invites_path, class: "space-y-4" do |f| %>
    <% if @invite.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <h2 class="text-red-800 font-medium"><%= pluralize(@invite.errors.count, "error") %> prohibited this invitation from being sent:</h2>
        <ul class="mt-2 list-disc list-inside text-red-700">
          <% @invite.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, required: true, autofocus: true, class: field_classes %>
      <p class="mt-1 text-sm text-gray-500">An invitation email will be sent to this address.</p>
    </div>

    <div class="flex gap-4">
      <%= f.submit "Send Invitation", class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md cursor-pointer" %>
      <%= link_to "Cancel", admin_invites_path, class: "bg-gray-200 hover:bg-gray-300 text-gray-700 font-medium py-2 px-4 rounded-md" %>
    </div>
  <% end %>
</div>
