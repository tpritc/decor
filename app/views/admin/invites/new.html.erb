<div class="max-w-md mx-auto">
  <h1 class="text-xl font-semibold mb-4">Invite Owner</h1>

  <p class="mb-5 text-sm text-stone-600">Send an invitation to create an owner account. They'll receive an email with a link to set up their profile and password. The invitation will be valid for 30 days.</p>

  <%= form_with model: @invite, url: admin_invites_path, class: "space-y-4" do |f| %>
    <% if @invite.errors.any? %>
      <div class="bg-white border border-stone-200 rounded p-3">
        <h2 class="text-sm font-medium text-stone-800"><%= pluralize(@invite.errors.count, "error") %> prohibited this invitation from being sent:</h2>
        <ul class="mt-2 list-disc list-inside text-sm text-stone-700">
          <% @invite.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-stone-700" %>
      <%= f.email_field :email, required: true, autofocus: true, class: field_classes %>
      <p class="mt-1 text-xs text-stone-500">An invitation email will be sent to this address.</p>
    </div>

    <div class="flex gap-3">
      <%= f.submit "Send Invitation", class: "bg-stone-900 hover:bg-stone-800 text-white text-sm font-medium py-2 px-4 rounded cursor-pointer" %>
      <%= link_to "Cancel", admin_invites_path, class: "bg-white hover:bg-stone-50 text-stone-800 text-sm font-medium py-2 px-4 rounded border border-stone-300" %>
    </div>
  <% end %>
</div>
