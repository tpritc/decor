<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= @component.component_type.name %></h1>
      <p class="text-gray-600">Owned by <%= link_to @owner.user_name, @owner, class: "text-indigo-600 hover:text-indigo-900" %></p>
    </div>
    <% if current_owner == @owner || admin? %>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_owner_component_path(@owner, @component), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" %>
        <%= button_to "Delete", owner_component_path(@owner, @component), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md" %>
      </div>
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <dl class="space-y-4">
      <div>
        <dt class="text-sm font-medium text-gray-500">Computer</dt>
        <dd class="mt-1">
          <% if @component.computer %>
            <%= link_to @component.computer.computer_model.name, owner_computer_path(@owner, @component.computer), class: "text-indigo-600 hover:text-indigo-900" %>
          <% else %>
            <span class="text-gray-400">Spare (not attached to a computer)</span>
          <% end %>
        </dd>
      </div>
      <% if @component.description.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 whitespace-pre-wrap"><%= @component.description %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <div class="mt-6">
    <%= link_to "â† Back to #{@owner.user_name}", @owner, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>
