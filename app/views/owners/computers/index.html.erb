<div class="max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-xl font-semibold"><%= @owner.user_name %>'s Computers</h1>
    <% if current_owner == @owner || admin? %>
      <%= link_to "Add Computer", new_owner_computer_path(@owner), class: "bg-stone-900 hover:bg-stone-800 text-white text-sm font-medium py-2 px-3 rounded" %>
    <% end %>
  </div>

  <% if @computers.any? %>
    <div class="bg-white border border-stone-200 rounded">
      <table class="min-w-full divide-y divide-stone-200">
        <thead class="bg-stone-50">
          <tr>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Model</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Serial</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Condition</th>
            <th class="px-4 py-2 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Status</th>
            <th class="px-4 py-2"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-stone-200 text-sm">
          <% @computers.each do |computer| %>
            <tr>
              <td class="px-4 py-3 whitespace-nowrap font-medium text-stone-900"><%= computer.computer_model.name %></td>
              <td class="px-4 py-3 whitespace-nowrap text-stone-600"><%= computer.serial_number.presence || "—" %></td>
              <td class="px-4 py-3 whitespace-nowrap text-stone-600"><%= computer.condition_label %></td>
              <td class="px-4 py-3 whitespace-nowrap text-stone-600"><%= computer.run_status_label %></td>
              <td class="px-4 py-3 whitespace-nowrap text-right">
                <%= link_to "View", owner_computer_path(@owner, computer), class: "text-stone-700 hover:text-stone-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-sm text-stone-500">No computers registered yet.</p>
  <% end %>

  <div class="mt-6">
    <%= link_to "← Back to #{@owner.user_name}", @owner, class: "text-sm text-stone-700 hover:text-stone-900" %>
  </div>
</div>
