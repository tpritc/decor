<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= @owner.user_name %>'s Computers</h1>
    <% if current_owner == @owner || admin? %>
      <%= link_to "Add Computer", new_owner_computer_path(@owner), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" %>
    <% end %>
  </div>

  <% if @computers.any? %>
    <div class="bg-white shadow overflow-hidden rounded-lg">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Model</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Serial</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Condition</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @computers.each do |computer| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium"><%= computer.computer_model.name %></td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= computer.serial_number.presence || "—" %></td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= computer.condition_label %></td>
              <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= computer.run_status_label %></td>
              <td class="px-6 py-4 whitespace-nowrap text-right">
                <%= link_to "View", owner_computer_path(@owner, computer), class: "text-indigo-600 hover:text-indigo-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p class="text-gray-500">No computers registered yet.</p>
  <% end %>

  <div class="mt-6">
    <%= link_to "← Back to #{@owner.user_name}", @owner, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>
