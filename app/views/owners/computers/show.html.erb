<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-2xl font-bold"><%= @computer.computer_model.name %></h1>
      <p class="text-gray-600">Owned by <%= link_to @owner.user_name, @owner, class: "text-indigo-600 hover:text-indigo-900" %></p>
    </div>
    <% if current_owner == @owner || admin? %>
      <div class="flex gap-2">
        <%= link_to "Edit", edit_owner_computer_path(@owner, @computer), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md" %>
        <%= button_to "Delete", owner_computer_path(@owner, @computer), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-md" %>
      </div>
    <% end %>
  </div>

  <div class="bg-white shadow rounded-lg p-6 mb-8">
    <dl class="grid grid-cols-2 gap-4">
      <% if @computer.serial_number.present? %>
        <div>
          <dt class="text-sm font-medium text-gray-500">Serial Number</dt>
          <dd class="mt-1"><%= @computer.serial_number %></dd>
        </div>
      <% end %>
      <div>
        <dt class="text-sm font-medium text-gray-500">Condition</dt>
        <dd class="mt-1"><%= @computer.condition_label %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">Run Status</dt>
        <dd class="mt-1"><%= @computer.run_status_label %></dd>
      </div>
      <% if @computer.description.present? %>
        <div class="col-span-2">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 whitespace-pre-wrap"><%= @computer.description %></dd>
        </div>
      <% end %>
      <% if @computer.history.present? %>
        <div class="col-span-2">
          <dt class="text-sm font-medium text-gray-500">History</dt>
          <dd class="mt-1 whitespace-pre-wrap"><%= @computer.history %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <div>
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-bold">Components (<%= @components.count %>)</h2>
      <% if current_owner == @owner || admin? %>
        <%= link_to "Add Component", new_owner_component_path(@owner, computer_id: @computer.id), class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-4 rounded-md text-sm" %>
      <% end %>
    </div>

    <% if @components.any? %>
      <div class="bg-white shadow overflow-hidden rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Description</th>
              <th class="px-6 py-3"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @components.each do |component| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap font-medium"><%= component.component_type.name %></td>
                <td class="px-6 py-4 text-gray-500"><%= truncate(component.description, length: 80) || "—" %></td>
                <td class="px-6 py-4 whitespace-nowrap text-right">
                  <%= link_to "View", owner_component_path(@owner, component), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-500">No components attached to this computer.</p>
    <% end %>
  </div>

  <div class="mt-6">
    <%= link_to "← Back to #{@owner.user_name}", @owner, class: "text-indigo-600 hover:text-indigo-900" %>
  </div>
</div>
