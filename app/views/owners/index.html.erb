<div class="max-w-5xl mx-auto">
  <h1 class="text-xl font-semibold mb-4">Owners</h1>

  <%= form_with url: owners_path, method: :get, local: true, class: "mb-4" do |f| %>
    <div class="flex gap-2">
      <%= f.text_field :query, value: params[:query], placeholder: "Search owners by username, real name, or email...", class: field_classes %>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% if @owners.any? %>
      <% @owners.each do |owner| %>
        <%= render "owner", owner: %>
      <% end %>

    <% else %>
      <%= empty_state("No owners found matching your search") %>
    <% end %>
  </div>
</div>
